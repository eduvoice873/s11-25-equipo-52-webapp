        "type": "string",
        "enum": [
          "borrador",
          "en_revision",
          "aprobado",
          "publicado",
          "rechazado",
          "archivado"
        ]
      },
      "destacado": { "type": "boolean" },
      "calificacion": { "type": "integer", "minimum": 1, "maximum": 5 }
    }
  },
  "TagCreateSchema": {
    "type": "object",
    "properties": {
      "categoriaId": { "type": "string", "format": "uuid" },
      "nombre": { "type": "string" }
    },
    "required": ["categoriaId", "nombre"]
  },
  "TagUpdateSchema": {
